#include <iostream>
#include <string>
using namespace std;

int main()
{
    int m[6][5]={0}, s=0, r, c, cantidad;
    bool x=0;
    
    do{
        cout<<"Ingrese el vendedor y producto\n";
        cin>>c;
        cin>>r;
        cout<<"Ingrese la cantidad vendida\n";
        cin>>cantidad;
        m[r-1][c-1]=cantidad;
        cout<<"Hay mas ventas?(no=0 si=1)\n";
        cin>>x;
    }while(x==1);
    
    for(int r=0;r<5;r++)
    {
        for(int c=0;c<4;c++)
        {
            cout<<m[r][c];
            cout<<"-";
            s+=m[r][c];
        }
        cout<<s;
        s=0;
        cout<<"\n";
    }
    for(int c=0;c<4;c++)
    {
        for(int r=0;r<5;r++)
            s+=m[r][c];
        cout<<s<<"-";
        s=0;
    }
}
