#include <iostream>
#include <string>
using namespace std;

int main()
{
    float e=1, factorial, x;
    int opc;

    do
    {
      cout<<"1. Obtener e.      2. Obtener e elevado a la x      3. Salir: ";
      cin>>opc;
      switch(opc)
      {
     
         case 1:
             e=2;
             for(int i=2;i<=10;i++)
             {
                 factorial=i;
                 for(int j=(i-1);j>=1;j--)
                     factorial*=j;
                 e+=(1/factorial);
              }
             cout<<"Valor: "<<e;
         break;
     
         case 2:
             cout<<"Ingresa el valor de x: ";
             cin>>x;
             e+=x;
      
              for(int i=2;i<=15;i++)
              {
                  x*=x;
                  factorial=i;
                 for(int j=(i-1);j>=1;j--)
                  factorial*=j;
                  e+=(x/factorial);
              }
             cout<<"Valor de e: "<<e;
          break;
      }
    }while(opc!=3);
    return 0;
}
